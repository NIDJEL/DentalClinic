<Window x:Class="DentalClinic.UI.Views.PatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новый пациент"
        Height="540" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundColor}"
        ResizeMode="NoResize">

    <Grid Margin="30">
        <Border Background="{StaticResource CardColor}"
                CornerRadius="12"
                Padding="30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.15" Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Grid.Row="0"
                           Text="Новый пациент"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryColor}"
                           Margin="0,0,0,25"/>

                <!-- Форма (2 колонки) -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая колонка -->
                    <StackPanel Grid.Column="0">
                        <Label Content="ФИО:" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="FullNameBox"
                                 Height="42"
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,15"/>

                        <Label Content="Телефон:" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="PhoneBox"
                                 Height="42"
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,15"/>

                        <Label Content="Email:" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="EmailBox"
                                 Height="42"
                                 Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <!-- Правая колонка -->
                    <StackPanel Grid.Column="2">
                        <Label Content="Дата рождения:" Style="{StaticResource ModernLabel}"/>
                        <DatePicker x:Name="BirthDatePicker"
                                    Style="{StaticResource ModernDatePicker}"
                                    Margin="0,0,0,15"/>

                        <Label Content="Адрес:" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="AddressBox"
                                 Height="42"
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,15"/>
                    </StackPanel>
                </Grid>

                <!-- Кнопки -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,25,0,0">
                    <Button Content="Сохранить"
                            Style="{StaticResource ModernButton}"
                            Width="130"
                            Height="42"
                            Click="Save_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
