<Window x:Class="DentalClinic.UI.Views.PatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новый пациент" Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundColor}"
        ResizeMode="NoResize">
    <Grid Margin="30">
        <Border Background="{StaticResource CardColor}"
               CornerRadius="12"
               Padding="30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.15" Color="Black"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Text="Новый пациент"
                          FontSize="22"
                          FontWeight="Bold"
                          Foreground="{StaticResource PrimaryColor}"
                          Margin="0,0,0,25"/>

                <!-- Форма -->
                <StackPanel Grid.Row="1">
                    <Label Content="ФИО:" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="FullNameBox" 
                            Height="42"
                            Style="{StaticResource ModernTextBox}"
                            Margin="0,0,0,15"/>

                    <Label Content="Дата рождения:" Style="{StaticResource ModernLabel}"/>
                    <DatePicker x:Name="BirthDatePicker" 
                               Width="200"
                               Style="{StaticResource ModernDatePicker}"
                               Margin="0,0,0,15"/>

                    <Label Content="Телефон:" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="PhoneBox" 
                            Height="42"
                            Style="{StaticResource ModernTextBox}"
                            Margin="0,0,0,15"/>

                    <Label Content="Адрес:" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="AddressBox" 
                            Height="42"
                            Style="{StaticResource ModernTextBox}"
                            Margin="0,0,0,15"/>

                    <Label Content="Email:" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="EmailBox" 
                            Height="42"
                            Style="{StaticResource ModernTextBox}"/>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Grid.Row="2" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           Margin="0,25,0,0">
                    <Button Content="Сохранить"
                           Style="{StaticResource ModernButton}"
                           Width="130"
                           Height="42"
                           Click="Save_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
