<Window x:Class="DentalClinic.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Стоматологическая клиника - Главная" Height="700" Width="1400"
        Background="{StaticResource BackgroundColor}"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ЛЕВАЯ ПАНЕЛЬ МЕНЮ -->
        <Border Grid.Column="0" 
                Background="{StaticResource SidebarColor}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Заголовок -->
                    <Border Background="{StaticResource PrimaryColor}" 
                            Padding="20,25"
                            Margin="0,0,0,20">
                        <TextBlock Text="Клиника"
                                  Foreground="White"
                                  FontSize="22"
                                  FontWeight="Bold"/>
                    </Border>

                    <!-- Врачи -->
                    <TextBlock x:Name="HeaderDoctors"
                              Text="ВРАЧИ"
                              Foreground="#9CA3AF"
                              FontSize="11"
                              FontWeight="Bold"
                              Margin="20,10,20,8"/>
                    <Button x:Name="BtnDoctors" 
                           Content="Врачи"
                           Style="{StaticResource SidebarButton}"
                           Click="BtnDoctors_Click"/>
                    <Button x:Name="BtnAddDoctor" 
                           Content="Добавить врача"
                           Style="{StaticResource SidebarButton}"
                           Click="BtnAddDoctor_Click"/>

                    <!-- Пациенты -->
                    <TextBlock Text="ПАЦИЕНТЫ"
                              Foreground="#9CA3AF"
                              FontSize="11"
                              FontWeight="Bold"
                              Margin="20,10,20,8"/>
                    <Button x:Name="BtnPatients" 
                           Content="Пациенты"
                           Style="{StaticResource SidebarButton}"
                           Click="BtnPatients_Click"/>
                    <Button x:Name="BtnAddPatient" 
                           Content="Добавить пациента"
                           Style="{StaticResource SidebarButton}"
                           Click="BtnAddPatient_Click"/>

                    <!-- Услуги -->
                    <TextBlock x:Name="HeaderServices"
                              Text="УСЛУГИ"
                              Foreground="#9CA3AF"
                              FontSize="11"
                              FontWeight="Bold"
                              Margin="20,10,20,8"/>
                    <Button x:Name="BtnServices" 
                           Content="Услуги"
                           Style="{StaticResource SidebarButton}"
                           Click="BtnServices_Click"/>
                    <Button x:Name="BtnAddService" 
                           Content="Добавить услугу"
                           Style="{StaticResource SidebarButton}"
                           Click="BtnAddService_Click"/>

                    <!-- Приёмы -->
                    <TextBlock Text="ПРИЁМЫ"
                              Foreground="#9CA3AF"
                              FontSize="11"
                              FontWeight="Bold"
                              Margin="20,10,20,8"/>
                    <Button x:Name="BtnAppointments" 
                           Content="Приёмы"
                           Style="{StaticResource SidebarButton}"
                           Click="BtnAppointments_Click"/>
                    <Button x:Name="BtnAddAppointment" 
                           Content="Добавить приём"
                           Style="{StaticResource SidebarButton}"
                           Click="BtnAddAppointment_Click"/>

                    <!-- График -->
                    <TextBlock Text="ГРАФИК"
                              Foreground="#9CA3AF"
                              FontSize="11"
                              FontWeight="Bold"
                              Margin="20,10,20,8"/>
                    <Button x:Name="BtnSchedule" 
                           Content="График врачей"
                           Style="{StaticResource SidebarButton}"
                           Click="BtnSchedule_Click"/>
                    <Button x:Name="BtnAddSchedule" 
                           Content="Добавить в график"
                           Style="{StaticResource SidebarButton}"
                           Click="BtnAddSchedule_Click"/>

                    <!-- Отчёты -->
                    <TextBlock x:Name="HeaderReports"
                              Text="ОТЧЁТЫ"
                              Foreground="#9CA3AF"
                              FontSize="11"
                              FontWeight="Bold"
                              Margin="20,10,20,8"/>
                    <Button x:Name="BtnReports" 
                           Content="Отчёты"
                           Style="{StaticResource SidebarButton}"
                           Click="BtnReports_Click"/>

                    <!-- Выход -->
                    <Border Margin="20,30,20,20" 
                           BorderBrush="#374151" 
                           BorderThickness="0,1,0,0"/>
                    <Button Content="Выход"
                           Margin="0,0,0,20"
                           Click="BtnExit_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SidebarButton}">
                                <Setter Property="Foreground" Value="#EF4444"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#7F1D1D"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- ПРАВАЯ ОБЛАСТЬ -->
        <Grid Grid.Column="1" Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Панель отчёта -->
            <Border x:Name="ReportPanel"
                   Grid.Row="0"
                   Background="{StaticResource CardColor}"
                   CornerRadius="10"
                   Padding="20"
                   Margin="0,0,0,20"
                   Visibility="Collapsed">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                </Border.Effect>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Месяц отчёта:" 
                              VerticalAlignment="Center" 
                              Margin="0,0,10,0"
                              FontSize="14"
                              Foreground="{StaticResource TextPrimary}"/>
                    <DatePicker x:Name="ReportMonthPicker" 
                               Width="160"
                               Style="{StaticResource ModernDatePicker}"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>

                    <Button x:Name="BtnBuildReport"
                           Content="Сформировать отчёт"
                           Style="{StaticResource ModernButton}"
                           Height="40"
                           Padding="20,10"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Click="BtnBuildReport_Click"/>

                    <Button x:Name="BtnExportPdf"
                           Content="Скачать PDF"
                           Style="{StaticResource SecondaryButton}"
                           Height="40"
                           Padding="20,10"
                           VerticalAlignment="Center"
                           Margin="0,0,30,0"
                           Click="BtnExportPdf_Click"/>

                    <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                        <TextBlock Text="Всего по организации:" 
                                  VerticalAlignment="Center"
                                  FontSize="14"
                                  Foreground="{StaticResource TextSecondary}"
                                  Margin="0,0,8,0"/>
                        <TextBlock x:Name="LblTotalOverall"
                                  VerticalAlignment="Center"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="{StaticResource PrimaryColor}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="30,0,0,0">
                        <TextBlock Text="За месяц:" 
                                  VerticalAlignment="Center"
                                  FontSize="14"
                                  Foreground="{StaticResource TextSecondary}"
                                  Margin="0,0,8,0"/>
                        <TextBlock x:Name="LblTotalMonth"
                                  VerticalAlignment="Center"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="{StaticResource AccentColor}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Панель действий -->
            <Border x:Name="ActionPanel"
                   Grid.Row="1"
                   Background="{StaticResource CardColor}"
                   CornerRadius="10"
                   Padding="20"
                   Margin="0,0,0,15"
                   Visibility="Collapsed">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock x:Name="TableTitle"
                              Grid.Column="0"
                              FontSize="20"
                              FontWeight="Bold"
                              Foreground="{StaticResource PrimaryColor}"
                              VerticalAlignment="Center"/>
                    
                    <Button x:Name="BtnDelete"
                           Grid.Column="1"
                           Content="Удалить выбранные"
                           Height="40"
                           Padding="20,10"
                           HorizontalAlignment="Right"
                           Click="BtnDelete_Click">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                <Setter Property="Background" Value="#DC3545"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C82333"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Основная таблица -->
            <Border Grid.Row="2"
                   Background="{StaticResource CardColor}"
                   CornerRadius="10"
                   Padding="0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                </Border.Effect>
                
                <DataGrid x:Name="MainGrid" 
                         Style="{StaticResource ModernDataGrid}"
                         BorderThickness="0"
                         Margin="0"
                         CanUserResizeColumns="True"
                         CanUserReorderColumns="False"/>
            </Border>
        </Grid>
    </Grid>
</Window>
