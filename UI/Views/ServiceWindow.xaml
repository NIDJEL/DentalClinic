<Window x:Class="DentalClinic.UI.Views.ServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новая услуга"
        Height="550"
        Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundColor}"
        ResizeMode="NoResize">

    <Grid Margin="30">
        <Border Background="{StaticResource CardColor}"
                CornerRadius="12"
                Padding="30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.15" Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Заголовок -->
                    <RowDefinition Height="*"/>
                    <!-- Контент -->
                    <RowDefinition Height="Auto"/>
                    <!-- Кнопка -->
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Grid.Row="0"
                           Text="Новая услуга"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryColor}"
                           Margin="0,0,0,20"/>

                <!-- Контент: форма + описание -->
                <StackPanel Grid.Row="1">

                    <!-- 2 колонки -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Категория -->
                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <Label Content="Категория:" Style="{StaticResource ModernLabel}"/>
                            <ComboBox x:Name="CategoryBox"
                                      Height="42"
                                      Style="{StaticResource ModernComboBox}"
                                      Margin="0,0,0,15"/>
                        </StackPanel>

                        <!-- Длительность -->
                        <StackPanel Grid.Row="0" Grid.Column="2">
                            <Label Content="Длительность (мин):" Style="{StaticResource ModernLabel}"/>
                            <TextBox x:Name="DurationBox"
                                     Height="42"
                                     Style="{StaticResource ModernTextBox}"
                                     Text="30"
                                     Margin="0,0,0,15"/>
                        </StackPanel>

                        <!-- Название -->
                        <StackPanel Grid.Row="1" Grid.Column="0">
                            <Label Content="Название услуги:" Style="{StaticResource ModernLabel}"/>
                            <TextBox x:Name="NameBox"
                                     Height="42"
                                     Style="{StaticResource ModernTextBox}"
                                     Margin="0,0,0,15"/>
                        </StackPanel>

                        <!-- Активна (чтобы было на уровне поля) -->
                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,28,0,0">
                            <CheckBox x:Name="IsActiveCheck"
                                      Content="Активна"
                                      IsChecked="True"
                                      Style="{StaticResource ModernCheckBox}"/>
                        </StackPanel>

                        <!-- Цена -->
                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <Label Content="Цена по умолчанию:" Style="{StaticResource ModernLabel}"/>
                            <TextBox x:Name="PriceBox"
                                     Height="42"
                                     Style="{StaticResource ModernTextBox}"
                                     Text="1000"/>
                        </StackPanel>
                    </Grid>

                    <!-- Описание (сразу под формой, внутри карточки) -->
                    <Label Content="Описание:" Style="{StaticResource ModernLabel}" Margin="0,15,0,0"/>
                    <TextBox x:Name="DescrBox"
                             Height="90"
                             Style="{StaticResource ModernTextBox}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"/>
                </StackPanel>

                <!-- Кнопка (всегда снизу справа, внутри карточки) -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="Сохранить"
                            Style="{StaticResource ModernButton}"
                            Width="130"
                            Height="42"
                            Click="Save_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
