<Window x:Class="DentalClinic.UI.Views.DoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DentalClinic.UI.Views"
        mc:Ignorable="d"
        Title="Новый врач" Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundColor}"
        ResizeMode="NoResize">
    <Grid Margin="30">
        <Border Background="{StaticResource CardColor}"
               CornerRadius="12"
               Padding="30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.15" Color="Black"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Text="Новый врач"
                          FontSize="22"
                          FontWeight="Bold"
                          Foreground="{StaticResource PrimaryColor}"
                          Margin="0,0,0,25"/>

                <!-- Форма -->
                <StackPanel Grid.Row="1">
                    <Label Content="ФИО:" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="FullNameBox" 
                            Height="42"
                            Style="{StaticResource ModernTextBox}"
                            Margin="0,0,0,15"/>

                    <Label Content="Специализация:" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="SpecBox" 
                            Height="42"
                            Style="{StaticResource ModernTextBox}"
                            Margin="0,0,0,15"/>

                    <Label Content="Телефон:" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="PhoneBox" 
                            Height="42"
                            Style="{StaticResource ModernTextBox}"
                            Margin="0,0,0,15"/>

                    <Label Content="Email:" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="EmailBox" 
                            Height="42"
                            Style="{StaticResource ModernTextBox}"
                            Margin="0,0,0,15"/>

                    <Label Content="Процент от выручки:" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="PercentBox" 
                            Height="42"
                            Style="{StaticResource ModernTextBox}"
                            Text="30"
                            Margin="0,0,0,15"/>

                    <CheckBox x:Name="IsActiveCheck" 
                             Content="Активен" 
                             IsChecked="True"
                             Style="{StaticResource ModernCheckBox}"/>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Grid.Row="2" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           Margin="0,25,0,0">
                    <Button Content="Сохранить"
                           Style="{StaticResource ModernButton}"
                           Width="130"
                           Height="42"
                           Click="Save_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
