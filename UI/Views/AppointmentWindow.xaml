<Window x:Class="DentalClinic.UI.Views.AppointmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DentalClinic.UI.Views"
        mc:Ignorable="d"
        Title="Новая запись" Height="480" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundColor}"
        ResizeMode="NoResize">
    <Grid Margin="30">
        <Border Background="{StaticResource CardColor}"
               CornerRadius="12"
               Padding="30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.15" Color="Black"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Text="Новая запись"
                          FontSize="22"
                          FontWeight="Bold"
                          Foreground="{StaticResource PrimaryColor}"
                          Margin="0,0,0,25"/>

                <!-- Форма -->
                <StackPanel Grid.Row="1">
                    <Label Content="Врач:" Style="{StaticResource ModernLabel}"/>
                    <ComboBox x:Name="DoctorBox" 
                             Height="42"
                             Style="{StaticResource ModernComboBox}"
                             Margin="0,0,0,15"/>

                    <Label Content="Пациент:" Style="{StaticResource ModernLabel}"/>
                    <ComboBox x:Name="PatientBox" 
                             Height="42"
                             Style="{StaticResource ModernComboBox}"
                             Margin="0,0,0,15"/>

                    <Label Content="Дата начала:" Style="{StaticResource ModernLabel}"/>
                    <DatePicker x:Name="DatePickerStart" 
                               Width="200"
                               Style="{StaticResource ModernDatePicker}"
                               Margin="0,0,0,15"/>

                    <Label Content="Время начала:" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="TimeStartBox" 
                            Height="42"
                            Style="{StaticResource ModernTextBox}"
                            Text="09:00"
                            Margin="0,0,0,15"/>

                    <Label Content="Длительность (мин):" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="DurationBox" 
                            Height="42"
                            Style="{StaticResource ModernTextBox}"
                            Text="30"/>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Grid.Row="2" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           Margin="0,25,0,0">
                    <Button Content="Создать"
                           Style="{StaticResource ModernButton}"
                           Width="130"
                           Height="42"
                           Click="Create_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>